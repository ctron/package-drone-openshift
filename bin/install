#!/bin/bash

# initial installation

set -e

case "$1" in
    -v|--version)
    version="$2"
esac

source $OPENSHIFT_CARTRIDGE_SDK_BASH

echo "$version" > ${OPENSHIFT_PDRONE_DIR}/env/OPENSHIFT_PDRONE_VERSION

password=$(generate_password)

echo "$password" > $OPENSHIFT_PDRONE_DIR/env/OPENSHIFT_PDRONE_ADMIN_TOKEN

client_result ""
client_result " Package Drone Admin Token: ${password}"
client_result ""

cart_props "password=$password"
